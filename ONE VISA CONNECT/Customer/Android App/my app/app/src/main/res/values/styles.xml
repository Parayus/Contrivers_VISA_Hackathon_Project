<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.Visa" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/visaBlue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:textColorPrimary">#000000</item>

        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="Widget.Visa.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/visaBlue</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/TextAppearance.Visa.Toolbar</item>
    </style>

    <style name="TextAppearance.Visa.Toolbar" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.Visa.Backdrop" parent="">
        <item name="android:background">@color/visaBlue</item>
    </style>

    <style name="Widget.Visa.Backdrop.TextButton" >
        <item name="android:background">@color/visaBlue</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="Theme.Visa.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Visa.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Visa.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="VisaProgressBar" >

        <item name="colorAccent">@color/visaOrange</item>
    </style>

</resources>
